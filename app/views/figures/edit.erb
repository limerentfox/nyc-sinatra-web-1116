<h1>Edit a Figure</h1>
<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">


  <!-- Create Figure -->
  <label for="figure_name">Name:</label>
  <input type="text"  id="figure_name" name="figure[name]" value="<%=@figure.name%>">
<p></p>
    <!-- View/Create Titles -->
<h4>Titles</h4>
  <% Title.all.each do |title| %>
    <label> <%= title.name %> </label>
    <input type="checkbox" id="<%= title.name %>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
  <% end %>

<p></p>

  <!-- View/Create Landmarks -->
<h4>Landmarks</h4>
  <% Landmark.all.each do |landmark| %>
  <label> <%= landmark.name %> </label>
    <input type="checkbox" id="<%= landmark.name %>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark) %> >
  <% end %>
<p></p>


<h3>Create a new Title</h3>
  <label for="new_title">Title:</label>
    <input type="text" id="new_title" name="title[name]" >

  <h3>Create a new Landmark</h3>
  <label>Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]">
    <label>Year:</label>
      <input type="text" name="landmark[year_completed]">

  <input type="submit" value="Edit Figure">
</form>
